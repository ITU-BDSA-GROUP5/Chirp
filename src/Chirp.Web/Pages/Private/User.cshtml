@page "/user/info"
@model MyApp.Namespace.UserModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2>See your info!</h2>

    <button>DELETE ME (not yet implemented :()</button>
    <p>Username: @(User.Identity?.Name)</p>
    <p>E-mail: @(Model.Mail)</p>
    <p>INDSÆT DEL MED FOLLOWEES</p>


    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p class="wrap">
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
        await Html.PartialAsync("_PageNavigation");
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>