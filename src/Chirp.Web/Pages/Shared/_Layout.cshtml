@using System.Security.Principal

<!DOCTYPE html>
<html lang="en">

<head>
	<title>@ViewData["Title"]</title>
	<link href="/css/style.css" rel="stylesheet" type="text/css" />
	<link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>

	@if (Context.Request.Cookies["Music"] != null) //Adapted from https://stackoverflow.com/questions/45451980/accessing-a-cookie-value-in-an-asp-net-core-mvc-razor-view
	{
		<audio loop autoplay>
			<source src="~/sound/bg.mp3" type="audio/mpeg" data-transcodekey="mp3" />
		</audio>
	}

	<div class=page>
		<h1><img src="/images/icon1.png" alt="Icon1" />Chirp!</h1>
		@await Html.PartialAsync("_LoginPartial")

		<div class=body>
			@RenderBody()
		</div>
		<div class=footer>
			Chirp &mdash; An ASP.NET Application
		</div>
	</div>

</body>

</html>